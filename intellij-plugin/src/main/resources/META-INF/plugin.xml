// intellij-plugin/src/main/resources/META-INF/plugin.xml
<idea-plugin>
    <id>com.apigenerator</id>
    <name>API Generator</name>
    <vendor email="support@apigenerator.com" url="https://www.apigenerator.com">API Generator</vendor>

    <description><![CDATA[
        Générateur d'API REST pour Spring Boot.
        <ul>
            <li>Génération de DTOs</li>
            <li>Création de Repositories</li>
            <li>Services et Controllers</li>
            <li>Support de téléchargement de fichiers</li>
            <li>Intégration Liquibase</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.apigenerator.intellij.service.ProjectSettingsService"/>
        <projectConfigurable
                instance="com.apigenerator.intellij.config.PluginSettingsForm"
                displayName="API Generator Settings"/>
        <notificationGroup id="API Generator"
                           displayType="BALLOON"
                           key="api.generator.notification.group"/>
    </extensions>

    <actions>
        <action id="APIGenerator.GenerateAPI"
                class="com.apigenerator.intellij.actions.GenerateApiAction"
                text="Generate API"
                description="Generate REST API for Entity">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>